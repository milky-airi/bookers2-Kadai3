<%= render 'layouts/error.html.erb', book: @book %>

<div class="container p-3">
  <div class="row">
    <div class="col-11 col-sm-10 col-lg-8 col-xl-6 mx-auto">

      <h2>Editing Book</h2>

      <%= form_with model:@book do |f| %>

        <div class="field">
          <%= f.label :Title %><br>
          <%= f.text_field :title %>
        </div>

        <div class="field">
          <%= f.label :Opinion %><br>
          <%= f.text_area :body %>
        </div>

        <div class="field">
          <%= f.submit "Update Book", class: "btn btn-success mt-2" %>
        </div>

        <%= link_to "Show", book_path(@book) %>ï½œ<%= link_to "Back", books_path %>

      <% end %>

    </div>
  </div>
</div>