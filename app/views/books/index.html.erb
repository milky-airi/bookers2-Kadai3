<%= render 'layouts/error.html.erb', book: @book %>

<div class="container pt-3">
  <div class="row">


    <div class="col-md-3 mx-auto">
      <%= render 'users/user_info.html.erb', user: @user %>
      <%= render 'users/new_book.html.erb' %>
    </div>

    <div class="col-md-8 offset-md-1 mx-auto">
      <h2>Books</h2>
      <table class="table">
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
        <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(book.user) do %>
                <%= image_tag book.user.get_profile_image(70,70) %>
              <% end %>
            </td>
            <td><%= link_to book.title, book_path(book) %></td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
      </table>
    </div>

  </div>
</div>