<div class="container pt-3">
  <div class="row">


    <div class="col-md-3 mx-auto">
      <%= render 'users/user_info.html.erb', user: @user %>
      <%= render 'users/new_book.html.erb' %>
    </div>

    <div class="col-md-8 offset-md-1 mx-auto">
      <h2>Book detail</h2>
      <table class="table">
        <tr>
          <td>
            <%= image_tag @book.user.get_profile_image(100,100) %>
            <p><%= link_to @book.user.name, user_path(@book.user) %></p>
          </td>
          <td><%= link_to @book.title, book_path(@book) %></td>
          <td><%= @book.body %></td>

          <% if @book.user == current_user %>
            <td><%= link_to "Edit", edit_book_path(@book), class: "btn btn-success" %></td>
            <td><%= link_to "Destroy", book_path(@book), method: :delete, class: "btn btn-danger", data: { confirm: "本当に削除しますか？" } %></td>
          <% end %>

        </tr>
      </table>
    </div>

  </div>
</div>