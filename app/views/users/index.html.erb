<div class="container pt-3">
  <div class="row">


    <div class="col-md-3 mx-auto">
      <%= render 'user_info.html.erb', user: @user %>
      <%= render 'users/new_book.html.erb' %>
    </div>

    <div class="col-md-8 offset-md-1 mx-auto">
      <h2>Users</h2>
      <table class="table">
        <tr>
          <th>image</th>
          <th>name</th>
          <th><th></th>
        </tr>
        <% @users.each do |user| %>
          <tr>
            <td><%= image_tag user.get_profile_image(70,70) %></td>
            <td><%= user.name %></td>
            <td><%= link_to "Show", user_path(user) %></td>
          </tr>
        <% end %>
      </table>
    </div>

  </div>
</div>