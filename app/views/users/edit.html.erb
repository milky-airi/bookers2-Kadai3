<%= render 'layouts/error.html.erb', book: @user %>

<div class="container p-3">
  <div class="row">
    <div class="col-11 col-sm-10 col-lg-8 col-xl-6 mx-auto">

      <h2>User info</h2>

      <%= form_with model:@user do |f| %>

        <div class="field">
          <%= f.label :Name %><br>
          <%= f.text_field :name %>
        </div>

        <div class="field">
          <%= f.label :Image %><br>
          <%= f.file_field :profile_image %>
        </div>

        <div class="field">
          <%= f.label :Introduction %><br>
          <%= f.text_area :introduction %>
        </div>

        <div class="field">
          <%= f.submit "Update User", class: "btn btn-secondary mt-2" %>
        </div>

      <% end %>

    </div>
  </div>
</div>