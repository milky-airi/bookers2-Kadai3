<h2 class="mt-3">New book</h2>

<%= form_with model: Book.new, url: books_path, method: :post do |f| %>

  <div class="field">
    <%= f.label :Title %>  <br>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :Opinion %>  <br>
    <%= f.text_area :body %>
  </div>

  <div class="field">
    <%= f.submit 'Create Book', class: "btn btn-success mt-2" %>
  </div>

<% end %>